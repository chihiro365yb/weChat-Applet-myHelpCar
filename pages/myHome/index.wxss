swiper{
  height: 350rpx;
}

swiper image{
  height: 100%;
  width: 100%;
}

view{
  margin: 0;
  padding: 0;
  background-color: #fff;

}

.grid-list{
  display: flex;
  flex-wrap: wrap;
  border-left: 1rpx solid #efefef;
  border-top: 1rpx solid #efefef;
}

.grid-item{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 33.33%;
  height: 200rpx;
  border-right: 1rpx solid #efefef;
  border-bottom: 1rpx solid #efefef;
  box-sizing: border-box;
}

.grid-item image{
  width: 60rpx;
  height: 60rpx;
}

.grid-item text{
  margin-top: 20rpx;
  font-size: 24rpx;
}

.img-box{
  display: flex;
  justify-content: space-around;
  padding: 20rpx 10rpx;
}

.img-box image{
  width: 45%;
}
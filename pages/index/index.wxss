/**index.wxss**/
@import './components/view/view.wxss';
@import './components/scroll-view/scroll-view.wxss';
@import './components/swiper/swiper.wxss';

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.usermotto {
  margin-top: 200px;
}

.bubble{
  width: 100%;
  height: 320rpx;
  background-color: #f5f5;
  position: relative;
}

.bubble-btn{
  background-color: #fff;
  color: #000;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
}

.ipt{
  border: 1px solid #eee;
  margin: 5px;
  padding: 5px;
  border-radius: 3px;
}